<div class="login-container">
  <div class="panel-heading">
    <h3 class="sign-up-title">Login</h3>
  </div>
  <label class="label"> &nbsp Username</label>

  <div class="input-group">
    <input
      type="text"
      class="form-control"
      placeholder="Username"
      aria-describedby="basic-addon2"
    />
  </div>

  <label class="label"> &nbsp Password</label>
  <div class="input-group">
    <input
      type="text"
      class="form-control"
      aria-label="Amount (to the nearest dollar)"
    />
  </div>

  <button id="Button" class="input-group">Login</button>

  <a id="a-login" href="#">Sign-up instead</a>
  <br />
  <br />
  <p id="login-fail">&nbsp&nbsp&nbsp&nbsp&nbspdog</p>
</div>